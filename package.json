{
  "name": "@photostructure/sqlite",
  "version": "0.1.0",
  "description": "Node.js SQLite implementation extracted from Node.js core",
  "homepage": "https://github.com/photostructure/node-sqlite",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/photostructure/node-sqlite.git"
  },
  "license": "MIT",
  "scripts": {
    "install": "node-gyp-build",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist \"*.tsbuildinfo\"",
    "clean:gyp": "node-gyp clean",
    "sync": "node scripts/sync-from-node.js",
    "node-gyp-rebuild": "node-gyp rebuild",
    "prebuildify": "prebuildify --napi --tag-libc --strip",
    "prebuild": "run-s sync prebuildify",
    "compile": "tsc --noEmit",
    "bundle": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/",
    "test:integration": "jest --testPathPattern=test/",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint --fix src/ test/",
    "fmt": "prettier --write \"**/*.{ts,js,json,md}\"",
    "build": "run-s compile bundle",
    "precommit": "run-s fmt lint build test",
    "prepare-release": "npm run build",
    "release": "release-it"
  },
  "gypfile": true,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "keywords": [
    "sqlite",
    "database",
    "sql",
    "native",
    "node-addon",
    "sync",
    "performance"
  ],
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.24",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "node-gyp": "^11.2.0",
    "npm-run-all": "4.1.5",
    "prebuildify": "^6.0.1",
    "prettier": "^3.5.3",
    "release-it": "^17.11.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}