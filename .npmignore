# no hidden files
.*

# no configs, docs, logs, or test files
*.config.js
*.config.cjs
*.config.mjs
*.config.ts
*.json
*.log
*.txt
*.yml
yarn.lock
package-lock.json
*.test.ts
*.test.js
**/test*
jest.config.api-compat.cjs
tsup.config.ts

# build/ contains the ingredients for prebuilds/ -- we don't need it.
build/
*.tsbuildinfo

# Development and vendored files
doc/
vendored/
benchmark/
CLAUDE.md
TODO.md

# include package.json
!package.json

# include README
!README.md

# include scripts directory (needed for rebuilds)
!scripts/
!scripts/*.js
!scripts/*.mjs
!scripts/*.sh

# include dist .cjs, .mjs, .js, and types
!dist/**/*.cjs
!dist/**/*.mjs
!dist/**/*.js
!dist/**/*.js.map
!dist/**/*.d.ts
!dist/**/*.d.cts

# include native code for rebuilds
!src/**/*.cpp
!src/**/*.h
!binding.gyp

# include prebuilds
!prebuilds/**