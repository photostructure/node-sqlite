# Snyk (https://snyk.io) policy file
version: v1.25.0

# Ignore specific vulnerabilities
ignore: {}

# Patches to apply
patch: {}

# Language settings
language-settings:
  node-js:
    enableLicensesScan: true
    
# Project settings  
exclude:
  global:
    - "benchmark/**"
    - "vendored/**"
    - "dist/**"
    - "test/**"
    - "scripts/**"
    - "*.test.ts"
    - "*.test.js"